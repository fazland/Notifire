{
    "name": "fazland/notifire",
    "require": {
        "php": ">=5.5.0",
        "symfony/event-dispatcher": "^2.7|^3.0",
        "symfony/options-resolver": "^2.7|^3.0"
    },
    "require-dev": {
        "mailgun/mailgun-php": "^2.0",
        "mikey179/vfsStream": "^1.6",
        "phpunit/phpunit": "^4.8|^5.0",
        "swiftmailer/swiftmailer": "^5.4",
        "twig/twig": "^1.24",
        "twilio/sdk": "^4.10"
    },
    "suggest": {
        "twilio/sdk": "Send SMS via Twilio",
        "fazland/skebby-rest-client": "Send SMS via Skebby",
        "mailgun/mailgun-php": "Use Mailgun API to send emails"
    },
    "autoload": {
        "psr-4": {
            "Fazland\\Notifire\\": "lib/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Fazland\\Notifire\\Tests\\": "tests/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        }
    },
    "license": "MIT"
}
